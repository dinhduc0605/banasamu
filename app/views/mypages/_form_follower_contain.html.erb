<div class="mypage">
  <div class="row">
    <% @follower_users.each do |follower| %>
      <div class="col-md-6">
        <div class="row">
          <div class="col-md-4">
            <div class="text-center">
              <%= image_tag avatar_url(follower), id: 'follow-avatar' %>
              <%= render 'follow_form', follower: follower %>
            </div>
          </div>
          <div class="col-md-4 personal-info">
            <form class="form-horizontal" role="form">
              <!-- email-->
              <div class="form-group">
                <label class="control-label">Email</label>
                <div>
                  <h3 class="user_infomation_text"><%= follower.email %></h3>
                </div>
              </div>
              <!--name-->
              <div class="form-group">
                <label class="control-label">Name</label>
                <div>
                  <h3 class="user_infomation_text"><%= follower.name %></h3>
                </div>
              </div>

              <!--Birthday-->
              <div class="form-group">
                <label class="control-label">Birthday</label>
                <div>
                  <h3 class="user_infomation_text"><%= follower.birthday %></h3>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
